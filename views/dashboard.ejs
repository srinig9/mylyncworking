                    ,   feed_details = body.replace(regex, "");

                    $("form#EditFeedForm").find("#feed_details").text(feed_details);
                    $("form#EditFeedForm").find("#id").val(results.data.id);
                    $("form#EditFeedForm").find("#group_id").val(results.data.group_id);

                    if(results.data.feedmedias.length>0){
                        var feedmedias = results.data.feedmedias;
                        var html = "";
                        $(feedmedias).each(function(index,value) {
