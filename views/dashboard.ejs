                if(data.feeds!=undefined && data.feeds==false){
                    $('.load-feed').hide();
                }else{
                    $(data).insertBefore('.load-feed');
                }
            }
        });
    });
    
    $(document).on("click",".btnfollow",function(){
        var parents = $(this).parents('li');
        var company_id = $(this).val();
        $.ajax({
