    /* Poll Answer */
    $(document).on("click",".answer_poll",function(e){
        var poll_option_id = $(this).val();
        var parents = $(this).parents('.feed_list');
        var poll_id = parents.data('id');
        $.ajax({
            type: "GET",
            url: "/pollanswer/"+poll_id+"/"+poll_option_id,
