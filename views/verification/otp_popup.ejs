<div id="otpModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Verify Phone</h4>
                </div>
                <div class="modal-body text-center">
                    <form method="post" id="form_phone_otp" class="form-inline">
                        <div class="row">
                            <% 
                            var phone_no_val='';
                            var dial_codes='';
                            if(typeof userverify!='undefined'){
                               if(typeof userverify.phone!='undefined' && userverify.phone!=''){
                                    phone_no_val = userverify.phone;
                               }

                               if(typeof userverify.dial_code!='undefined' && userverify.dial_code!=''){
                                    dial_codes = userverify.dial_code;
                               }
                            }

                            if(typeof phone_no_val!='undefined' && phone_no_val!=''){%>
                                <div class="col-sm-12 phone_otp_load">
                                    <center><h3>Thank You!</h3></center><br/>
                                    <p>A confirmation code has been sent via SMS to  <%=dial_codes%> <%=phone_no_val%>.<br> Please enter the code that you received. </p>
                                    <br/>
                                </div>
                            <% } %>

                            <div class="col-sm-12 phone_otp_quick" style="display:none;">
                                <center><h3>Thank You!</h3></center><br/>
                                <p>A confirmation code has been sent via SMS to  <span class="dial"></span> <span class="phone_no"></span>.<br> Please enter the code that you received. </p>
                                <br/>
                            </div>
                            <div class="form-group">
                                <input type="text" name="phone_otp" placeholder="Enter received OTP" class="form-control" id="phone_otp" maxlength="6" required>
                            </div>
                        
                            <div class="form-group">
                                <button type="button" class="btn send_phone_otp form-control btn-primary">Submit</button>
                            </div>
                            <div class="clearfix"></div><br>

                            <% if(typeof phone_no_val!='undefined' && phone_no_val!=''){%>
                            <div class="col-sm-12 text-center origin_phone_msg1">
                                <center>If you do not receive the code in 10 minutes. Please request a new OTP<br/><br/><a href="javascript:;" id="verify_phone_btn" class="btn btn-primary btn-primary-b30">Resend OTP</a></center>
                                <br/>
                            </div>
                            <% } %>

                            <div class="col-sm-12 text-center origin_phone_msg2" style="display: none;">
                                <center>If you do not receive the code in 10 minutes. Please request a new OTP<br/><br/><a href="javascript:;" id="verify_phone_btn" class="btn btn-primary btn-primary-b30">Resend OTP</a></center>
                                <br/>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>