<style type="text/css">
	.mainnav-main {
		position: fixed;
		width: 100%;
		background:#fff;
		z-index: 11;
	    -webkit-box-shadow: 0 2px 4px rgba(57, 63, 72, 0.3);
	    -moz-box-shadow: 0 2px 4px rgba(57, 63, 72, 0.3);
	    box-shadow: 0 2px 4px rgba(57, 63, 72, 0.3);
	}
</style>
<script type="text/javascript">
	$(document).ready(function(){
		$(".middle-content").css({"padding-top":$('.mainnav-main').height()});
	})
</script>
<header class="mainnav-main">
	<%if (req.path == '/') { %>
		<!-- Top Header News Starts -->
		<%- partial('../includes/top-header-news.ejs') %>
		<!-- Top Header News Ends -->
	<% } %>

	<div class="mainnavigation"> 
		<div class="container">
			<div class="mainnav"> 
				<div class="logo">
					<a href="/" class="logo-link">
						<img src="/themes/frontend/images/logo.png" class="img-responsive">
					</a> 
				</div>
				<div class="search-wrap">
					<div class="box">
					  <div class="container-4">
					  	<form method="get" class="searchForm" action="/search/">
						<input type="search" name="keyword" id="search" placeholder="Job Title, Keywords or Company Name" class="search-active formSearch" value="<%= (typeof req.param('keyword') !='undefined' && req.param('keyword')!='' ? req.param('keyword') : '')%>">
						<button type="submit" class="icon search-button"><i class="fa fa-search"></i></button>
						</form>
					  </div>
					</div>
				</div>
				<div class="nav-links">
					<!-- Fixed navbar -->
					<nav class="navbar navbar-inverse"> 
						<div class="topnav">
							<div class="topnavinner">
								<div class="navbar-header">
								  <button type="button" class="navbar-toggle mainheadertoogle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
									<span class="sr-only">Toggle navigation</span>
									<span class="icon-bar"></span>
									<span class="icon-bar"></span>
									<span class="icon-bar"></span>
								  </button> 
								</div>
								<div id="navbar" class="navbar-collapse collapse">
									<ul class="nav navbar-nav">
										<li class="active"> <a href="/business-solutions">Business Solutions</a> </li>
										<!-- <li> <a href="/partners">Partners</a> </li> -->
										<li> <a href="/jobs">Jobs</a> </li>
									</ul> 
								</div><!--/.nav-collapse -->
							</div>     
						</div> 	 
					</nav>  
				</div> 
			</div> 
		</div>
	</div>  
</header>
<script>
	$(".searchForm").submit(function(event) {
        event.preventDefault();
        var keyword = $(".searchForm .formSearch").val();
        var url = "/search/"+keyword;
        window.location.href=url;
    });
</script>